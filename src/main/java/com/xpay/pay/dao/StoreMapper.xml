<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xpay.pay.dao.StoreMapper">

  <resultMap id="StoreResultMap" type="com.xpay.pay.models.Store">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  
  <sql id="storeColumns">
    id,
    code,
    name
  </sql>

  <select id="findById" resultMap="StoreResultMap">
    SELECT
    <include refid="storeColumns" />
    FROM bill_store
    WHERE bill_store.id = #{id} AND deleted = false
  </select>
  
  <select id="findByCode" resultMap="StoreResultMap">
    SELECT
    <include refid="storeColumns" />
    FROM bill_store
    WHERE bill_store.code = #{code} AND deleted = false
  </select>
  
   <select id="findAll" resultMap="StoreResultMap">
    SELECT
    <include refid="storeColumns" />
    FROM bill_store
    WHERE deleted = false
  </select>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.xpay.pay.models.Store">
    insert into bill_store
    <trim prefix="(" suffix=")" suffixOverrides=",">
     code, name
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
     	#{code,jdbcType=VARCHAR},
     	#{name,jdbcType=VARCHAR}
    </trim>
  </insert>
  
  <update id="updateById" parameterType="com.xpay.pay.models.Store">
    update bill_store
    <set>
      <if test="code != null">
        code = #{code,jdbcType=VARCHAR},
      </if>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      update_date = now()
    </set>
    where id = #{id,jdbcType=BIGINT}
      and deleted = false
  </update>
  
  <update id="deleteById">
    update bill_store
    <set>
      deleted = true,
      update_date = now()
    </set>
    where id = #{id,jdbcType=BIGINT}
      and deleted = false
  </update>
  
</mapper>