<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Payment Service Server</display-name>
	<description>
		Payment Service Server implementation
	</description>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring-context.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>filterChainProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>filterChainProxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>pay</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>HeartbeatServlet</servlet-name>
		<display-name>HeartbeatServlet</display-name>
		<servlet-class>com.xpay.pay.controller.HeartbeatServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ExternalConfigServlet</servlet-name>
		<display-name>ExternalConfigServlet</display-name>
		<servlet-class>com.xpay.pay.controller.ExternalConfigServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>pay</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>HeartbeatServlet</servlet-name>
		<url-pattern>/heartbeat</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ExternalConfigServlet</servlet-name>
		<url-pattern>/monitor</url-pattern>
	</servlet-mapping>
</web-app>